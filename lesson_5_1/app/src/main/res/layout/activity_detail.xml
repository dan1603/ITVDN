<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.activity.detail.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll">

            <android.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/transparent"
                android:subtitleTextAppearance="@style/SubtitleAppearance"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                android:titleTextAppearance="@style/TitleAppearance"
                app:layout_scrollFlags="scroll|enterAlways"
                app:titleTextColor="@color/colorWhite" />

        </android.support.design.widget.AppBarLayout>

        <TextView
            android:id="@+id/txt_detail_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center"
            android:textSize="@dimen/txt_size_100" />

        <TextView
            android:id="@+id/txt_detail_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/indentation_6"
            android:layout_marginEnd="@dimen/indentation_6"
            android:text="@string/txt_default_name"
            android:textAlignment="center"
            android:textSize="@dimen/txt_size_35" />

        <TextView
            android:id="@+id/txt_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/indentation_6"
            android:layout_marginEnd="@dimen/indentation_6"
            android:text="@string/txt_default_surname"
            android:textAlignment="center"
            android:textSize="@dimen/txt_size_35" />

        <TextView
            android:id="@+id/txt_detail_fathername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/indentation_6"
            android:layout_marginEnd="@dimen/indentation_6"
            android:text="@string/txt_default_fathername"
            android:textAlignment="center"
            android:textSize="@dimen/txt_size_35" />

    </LinearLayout>

</FrameLayout>